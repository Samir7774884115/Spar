<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#db3b3b"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/sparlogo"
        android:layout_gravity="center"
        android:padding="100dp"
        android:alpha="0.5"
        android:background="@drawable/sparhome"
        android:layout_height="wrap_content">

    </ImageView>

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/linearlayoutshape"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
<ImageView
    android:layout_width="wrap_content"
    android:src="@drawable/sparlogo"
    android:layout_gravity="center"
    android:layout_margin="15dp"
    android:layout_height="wrap_content">

</ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/buttonshapegetstarted"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorblack"
                android:textStyle="normal" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:background="#F5F5F5" />

            <EditText
                android:id="@+id/nameedtText"
                android:background="@null"
                android:singleLine="true"
                android:textStyle="normal"
                android:textSize="15sp"
                android:hint="Enter Name"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:textColorHint="#BDBDBD"
                android:textColor="@color/colorblack"
                android:layout_gravity="center"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/buttonshapegetstarted"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorblack"
                    android:textStyle="normal" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:background="#F5F5F5" />

                <EditText
                    android:id="@+id/emailedtText"
                    android:background="@null"
                    android:singleLine="true"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:hint="Enter Email "
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:textColorHint="#BDBDBD"
                    android:textColor="@color/colorblack"
                    android:layout_gravity="center"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/buttonshapegetstarted"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UserName"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorblack"
                    android:textStyle="normal" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:background="#F5F5F5" />

                <EditText
                    android:id="@+id/usernameedtText"
                    android:background="@null"
                    android:singleLine="true"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:hint="UserName "
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:textColorHint="#BDBDBD"
                    android:textColor="@color/colorblack"
                    android:layout_gravity="center"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/buttonshapegetstarted"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mobile No"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorblack"
                    android:textStyle="normal" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:background="#F5F5F5" />

                <EditText
                    android:id="@+id/mobileedtText"
                    android:background="@null"
                    android:singleLine="true"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:hint="Enter Mobile No"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:textColorHint="#BDBDBD"
                    android:textColor="@color/colorblack"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/buttonshapegetstarted"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorblack"
                    android:textStyle="normal" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:background="#F5F5F5" />

                <EditText
                    android:id="@+id/passedtText"
                    android:background="@null"
                    android:singleLine="true"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:hint="Enter Password"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:textColorHint="#BDBDBD"
                    android:textColor="@color/colorblack"
                    android:layout_gravity="center"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/buttonshapegetstarted"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirm Password"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorblack"
                    android:textStyle="normal" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:background="#F5F5F5" />

                <EditText
                    android:id="@+id/cnfpassText"
                    android:background="@null"
                    android:singleLine="true"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:hint="Confirm Password"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:textColorHint="#BDBDBD"
                    android:textColor="@color/colorblack"
                    android:layout_gravity="center"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <Button
                android:id="@+id/btnsave"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:background="#db3b3b"
                android:textAllCaps="true"
                android:text="SAVE"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorwhite"
                android:textSize="18dp"></Button>

